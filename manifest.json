{
    "manifest_version": 3,
    "name": "YouTube Video Tracker",
    "version": "1.0",
    "description": "Tracks how many times you've watched a YouTube video.",
    "permissions": ["storage", "tabs", "webNavigation", "scripting"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/watch*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  